<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:gravity="center"
    android:layout_height="wrap_content">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="5dp"

        android:background="@drawable/rectangle_text_poll"

        android:layout_width="400px"
        android:layout_height="400px">

        <TextView

            android:id="@+id/textStatus"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="8sp"
            android:layout_width="400px"
            android:layout_height="400px"
            android:text="shakir is my name and wjhat is your name gd kgjkg jdfk gdfkg dfkg dflkgd gkdfj gld sgdgssd gsdgs sgg sdgsd gsd gg ds s dg sd gsdgs dgs gdgs "
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintBottom_toBottomOf="@+id/textStatus"
            app:layout_constraintEnd_toEndOf="@+id/textStatus"
            android:id="@+id/constraintLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">



            <TextView
                android:layout_width="70px"
                android:layout_height="70px"
                android:background="@drawable/circle"
                android:gravity="center"
                android:padding="3dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:id="@+id/squircleCardView"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@drawable/rectangle_text_poll"
                android:id="@+id/imageStatus"
                android:layout_width="400px"
                android:scaleType="centerCrop"
                android:layout_height="400px"
                android:src="@drawable/placeholder_image"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintBottom_toBottomOf="@+id/imageStatus"
                app:layout_constraintEnd_toEndOf="@+id/imageStatus"
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">



                <TextView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>